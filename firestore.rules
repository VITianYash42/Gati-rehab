rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    
    function isAuthenticated() {
      return request.auth != null;
    }
    
    function isOwner(userId) {
      return isAuthenticated() && request.auth.uid == userId;
    }

    function isDoctorOf(patientId) {
      return isAuthenticated() && 
        get(/databases/$(database)/documents/users/$(patientId)).data.doctorId == request.auth.uid;
    }

    function isDocOwner(data) {
      return isAuthenticated() && (
        data.userId == request.auth.uid || 
        data.patientId == request.auth.uid || 
        data.senderId == request.auth.uid ||
        data.receiverId == request.auth.uid ||
        (data.participants != null && request.auth.uid in data.participants)
      );
    }
    
    // 1. Users collection 
    match /users/{userId} {
      allow read: if isAuthenticated();
      allow write: if isOwner(userId);
    }
    
    // 2. Routines Collection
    match /routines/{userId} {
      allow read: if isOwner(userId) || isDoctorOf(userId);
      allow write: if isOwner(userId) || isDoctorOf(userId);
    }
    
    // 3. Sessions collection 
    match /sessions/{sessionId} {
      allow create: if isAuthenticated();
      allow read: if isAuthenticated() && (isDocOwner(resource.data) || isDoctorOf(resource.data.patientId));
      allow update, delete: if isAuthenticated() && isDocOwner(resource.data);
    }
    
    // 4. Trends (Charts)
    match /trends/{patientId}/{document=**} {
      allow read: if isOwner(patientId) || isDoctorOf(patientId);
      allow write: if isDoctorOf(patientId);
    }
    
    // 5. Pain Logs collection
    match /pain_logs/{logId} {
      allow create: if isAuthenticated() && (
        request.resource.data.patientId == request.auth.uid || 
        (request.resource.data.userId == request.auth.uid && request.resource.data.patientId == null)
      );
      allow read: if isAuthenticated() && (
        resource.data.patientId == request.auth.uid || 
        (resource.data.userId == request.auth.uid && resource.data.patientId == null) ||
        isDoctorOf(resource.data.patientId) ||
        (resource.data.userId != null && isDoctorOf(resource.data.userId))
      );
      allow update, delete: if isAuthenticated() && (
        resource.data.patientId == request.auth.uid || 
        (resource.data.userId == request.auth.uid && resource.data.patientId == null)
      );
    }

    // 6. Appointments collection
    match /appointments/{appointmentId} {
      allow create: if isAuthenticated();
      allow read: if isAuthenticated() && (
        resource.data.patientId == request.auth.uid || 
        resource.data.doctorId == request.auth.uid
      );
      allow update, delete: if isAuthenticated() && (
        resource.data.patientId == request.auth.uid || 
        resource.data.doctorId == request.auth.uid
      );
    }

    // 7. Messages collection
    match /messages/{messageId} {
      allow create: if isAuthenticated();
      allow read: if isAuthenticated() && (
        resource.data.senderId == request.auth.uid || 
        resource.data.receiverId == request.auth.uid ||
        (resource.data.participants != null && request.auth.uid in resource.data.participants) ||
        (resource.data.chatId != null && resource.data.chatId.matches('.*' + request.auth.uid + '.*'))
      );
      allow update, delete: if isAuthenticated() && (
        resource.data.senderId == request.auth.uid ||
        (resource.data.participants != null && request.auth.uid in resource.data.participants)
      );
    }
    
    // 8. Progress Photos
    match /progress_photos/{photoId} {
      allow create: if isAuthenticated() && request.resource.data.userId == request.auth.uid;
      allow read: if isAuthenticated() && (
        resource.data.userId == request.auth.uid || 
        isDoctorOf(resource.data.userId)
      );
    }

    // 9. Medications collection
    match /medications/{medicationId} {
      allow read: if isAuthenticated() && (
        resource.data.userId == request.auth.uid || 
        isDoctorOf(resource.data.userId)
      );
      allow create: if isAuthenticated() && (
        request.resource.data.userId == request.auth.uid ||
        isDoctorOf(request.resource.data.userId)
      );
      allow update, delete: if isAuthenticated() && (
        resource.data.userId == request.auth.uid || 
        isDoctorOf(resource.data.userId)
      );
    }

    // 10. Audit Logs
    match /audit_logs/{logId} {
      allow create: if isAuthenticated();
      allow read: if false;
    }
    
    // 11. Doctor Patients relationship matching
    match /doctor_patients/{doctorId}/patients/{patientId} {
      allow read, write: if request.auth.uid == doctorId || isOwner(patientId);
    }
  }
}
